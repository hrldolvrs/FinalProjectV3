<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bgtest02">

    <TextView
        android:id="@+id/signuptxtStudAP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Approval Pal"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="231dp"/>

    <TextView
        android:id="@+id/signuptxtStudSEAM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seamless Abscence Requests:"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="231dp"/>
    <TextView
        android:id="@+id/signuptxtStudWHERE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Where Permission Meets Precision!"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="231dp"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:id="@+id/SignupText"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/signupStudEmail"
                android:background="@drawable/borderblack"
                android:drawablePadding="8dp"
                android:hint="School Email"
                android:inputType="textEmailAddress"
                android:padding="8dp"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/signupPhoneNum"
                android:background="@drawable/borderblack"
                android:drawablePadding="8dp"
                android:hint="Phone Number"
                android:inputType="phone|number"
                android:padding="8dp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/signupFirstName"
                android:background="@drawable/borderblack"
                android:drawablePadding="8dp"
                android:hint="First Name"
                android:inputType="text"
                android:padding="8dp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/signupLastName"
                android:background="@drawable/borderblack"
                android:drawablePadding="8dp"
                android:hint="Last Name"
                android:inputType="text"
                android:padding="8dp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/signupID"
                android:background="@drawable/borderblack"
                android:drawablePadding="8dp"
                android:hint="ID"
                android:inputType="number"
                android:padding="8dp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/signupPWD"
                android:background="@drawable/borderblack"
                android:drawablePadding="8dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/borderblack"
                android:drawablePadding="8dp"
                android:textColor="@color/black"
                android:id="@+id/roleSpinner"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/signupBttnStud"
                android:text="SIGN UP"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#00A1E4"
                android:background="@drawable/rounded_corners"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>